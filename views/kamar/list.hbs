<br>
<a href="/admin/kamar/add" class="btn btn-sm btn-primary" style="float: right"><i class="fa fa-plus-circle"
        aria-hidden="true"></i> Tambah</a>
<br>
<br>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Nomor Kamar</th>
            <th scope="col">Jumlah Tempat Tidur</th>
            <th scope="col">Fasilitas Kamar</th>
            <th scope="col">Harga/hari</th>
            <th>Opsi</th>
        </tr>
    </thead>
    <tbody>
        {{#each infokamar}}
        <tr>
            <th scope="row">{{ no }}</th>
            <td>{{ jumlah }}</td>
            <td>{{ fasilitas }}</td>
            <td>{{ harga }}</td>
            <td>
                <a href="/admin/kamar/edit/{{ id }}" class="btn btn-primary"><i class="fa fa-pencil"
                        aria-hidden="true"></i></a>
                <a href="/admin/kamar/{{ id }}/delete" class="btn btn-danger"><i class="fa fa-trash-o"
                        aria-hidden="true"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
</div>